{
  "cli": {
    "version": ">= 5.2.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "autoIncrement": true,
        "bundleIdentifier": "com.astrologyapp.dev",
        "enterpriseProvisioning": false
      },
      "android": {
        "autoIncrement": true,
        "applicationId": "com.astrologyapp.dev",
        "buildType": "apk"
      },
      "env": {
        "APP_ENV": "preview",
        "API_URL": "https://staging-api.astrology-app.com/api"
      }
    },
    "production": {
      "distribution": "store",
      "ios": {
        "autoIncrement": true,
        "bundleIdentifier": "com.astrologyapp.astrology"
      },
      "android": {
        "autoIncrement": true,
        "applicationId": "com.astrologyapp.astrology",
        "buildType": "app-bundle"
      },
      "env": {
        "APP_ENV": "production",
        "API_URL": "https://api.astrology-app.com/api"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "your-apple-id@email.com",
        "ascAppId": "YOUR_APP_STORE_CONNECT_APP_ID",
        "appleTeamId": "YOUR_APPLE_TEAM_ID"
      },
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "track": "production"
      }
    },
    "preview": {
      "ios": {
        "appleId": "your-apple-id@email.com",
        "ascAppId": "YOUR_APP_STORE_CONNECT_APP_ID",
        "appleTeamId": "YOUR_APPLE_TEAM_ID",
        "expoCli": {
          "skipWorkflowCheck": true
        }
      },
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "track": "internal"
      }
    }
  }
}
